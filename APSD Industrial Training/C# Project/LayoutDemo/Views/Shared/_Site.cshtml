
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />

    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <title>@ViewBag.Title</title>
</head>
<body>
    <div> 
        <table class="table table-bordered" width="800" align="center" cellpadding="5" cellspacing="5">
            <tr style="background-color:darkslategray;color:white;text-align:center">
                <td colspan="2">Tez Pratap | Deoria</td>
            </tr>
            <tr height="300">
                <td width="250">
                    <ul>
                        <li>@Html.ActionLink("Home","Home")</li>
                        <li>@Html.ActionLink("About","About")</li>
                        <li>@Html.ActionLink("Contact", "Contact")</li>
                    </ul>
                </td>
                <td width="550">
                    @RenderBody()
                </td>
            </tr>
            <tr style="background-color:darkslategray;color:white;text-align:center">
                <td colspan="2">
                    &copy; copyright 2023 <br />
                    About   |  Contact  |  Location
                </td>  
            </tr>
        </table>
    </div>
</body>
</html>
